<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddStudent">

    <TableLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView android:text="ID" android:textSize="20sp">

            </TextView>
            <EditText android:id="@+id/edtAddID" android:textSize="20sp" android:enabled="false"></EditText>


        </TableRow>

        <TableRow>
            <TextView android:text="Name" android:textSize="20sp">

            </TextView>
            <EditText android:id="@+id/edtAddName" android:textSize="20sp" android:hint="Type Name"></EditText>


        </TableRow>


        <TableRow>
            <TextView android:text="Tel" android:textSize="20sp">

            </TextView>
            <EditText android:id="@+id/edtAddTel" android:textSize="20sp" android:hint="Type Tel"></EditText>

        </TableRow>

        <TableRow>
            <TextView android:text="Email" android:textSize="20sp">

            </TextView>
            <EditText android:id="@+id/edtAdEmal" android:inputType="textEmailAddress" android:textSize="20sp" android:hint="Type Email"></EditText>

        </TableRow>

<TableRow>
    <Button android:id="@+id/btAdd" android:text="ADD Student" android:textSize="20sp" android:layout_margin="10dp"></Button>
    <Button android:id="@+id/btRedo" android:text="Redo" android:textSize="20sp" android:layout_margin="10dp"></Button>

</TableRow>
    </TableLayout>

</LinearLayout>